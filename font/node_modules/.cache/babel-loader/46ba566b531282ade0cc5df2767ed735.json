AA,QAAA,EAAA,KAAA;AAHA,OAAA,CAAA,CAIA,IAJA,CAIA,UAAA,GAAA,EAAA;AACA,YAAA,OAAA,GAAA,GAAA,CAAA,IAAA,CAAA,IAAA,CAAA,OAAA;AACA,QAAA,OAAA,CAAA,OAAA,CAAA,UAAA,IAAA,EAAA;AACA,UAAA,IAAA,CAAA,cAAA,GAAA,KAAA;AACA,SAFA;AAGA,QAAA,KAAA,CAAA,QAAA,GAAA,OAAA;AACA,QAAA,KAAA,CAAA,UAAA,GAAA,GAAA,CAAA,IAAA,CAAA,IAAA,CAAA,WAAA;AACA,OAXA;AAYA,KAtBA;AAuBA,IAAA,cAvBA,0BAuBA,OAvBA,EAuBA;AAAA;;AACA;AACA,MAAA,OAAA,CAAA,cAAA,GAAA,IAAA,CAFA,CAIA;;AACA,MAAA,mBAAA,CAAA,OAAA,CAAA,EAAA,CAAA,QAAA,EAAA,EAAA,OAAA,CAAA,cAAA,CAAA,CAAA,IAAA,CAAA,UAAA,GAAA,EAAA;AACA;AACA,QAAA,OAAA,CAAA,cAAA,GAAA,KAAA;;AACA,QAAA,MAAA,CAAA,QAAA,CAAA;AACA,UAAA,IAAA,EAAA,SADA;AAEA,UAAA,OAAA,EAAA,OAAA,CAAA,cAAA,GAAA,UAAA,GAAA;AAFA,SAAA;AAIA,OAPA,EAOA,KAPA,CAOA,UAAA,GAAA,EAAA;AACA,QAAA,OAAA,CAAA,cAAA,GAAA,KAAA;;AACA,QAAA,MAAA,CAAA,QAAA,CAAA;AACA,UAAA,IAAA,EAAA,SADA;AAEA,UAAA,OAAA,EAAA,OAAA,CAAA,cAAA,GAAA,YAAA,GAAA;AAFA,SAAA;;AAIA,QAAA,OAAA,CAAA,cAAA,GAAA,CAAA,OAAA,CAAA,cAAA;AACA,OAdA;AAeA;AA3CA,GArBA;AAkEA,EAAA,OAAA,EAAA;AACA,IAAA,MAAA,EAAA,gBAAA,KAAA,EAAA;AACA,aAAA,KAAA;AACA;AAHA;AAlEA,CAAA","sourcesContent":["<template>\r\n  <div>\r\n    <el-card class=\"box-card\">\r\n      <div slot=\"header\" class=\"clearfix\">\r\n        <el-breadcrumb separator-class=\"el-icon-arrow-right\">\r\n          <el-breadcrumb-item :to=\"{ path: '/' }\">首页</el-breadcrumb-item>\r\n          <el-breadcrumb-item>评论管理</el-breadcrumb-item>\r\n        </el-breadcrumb>\r\n      </div>\r\n      <!--\r\n      1. 把数据列表当顶给表格data\r\n      2. 设计表格列\r\n      3. 给表格列绑定要渲染的数据字段\r\n          -->\r\n      <el-table\r\n        class=\"table-list\"\r\n        :data=\"articles\"\r\n        style=\"width: 100%\"\r\n        stripe\r\n      >\r\n        <el-table-column\r\n          prop=\"title\"\r\n          label=\"标题\">\r\n        </el-table-column>\r\n        <el-table-column\r\n          prop=\"total_comment_count\"\r\n          label=\"总评论数\">\r\n        </el-table-column>\r\n        <el-table-column\r\n          label=\"粉丝评论数据\"\r\n          prop=\"fans_comment_count\">\r\n        </el-table-column>\r\n        <el-table-column\r\n          label=\"评论状态\">\r\n          <template slot-scope=\"scope\">\r\n            {{ scope.row.comment_status ? '正常' : '关闭'}}\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column\r\n          label=\"操作\">\r\n          <template slot-scope=\"scope\">\r\n            <!-- 开关组件绑定的数据是一个布尔值，它会根据布尔值的真假来决定开关状态 -->\r\n            <el-switch\r\n              v-model=\"scope.row.comment_status\"\r\n              :disabled=\"scope.row.statusDisabled\"\r\n              active-color=\"#13ce66\"\r\n              inactive-color=\"#ff4949\"\r\n              @change=\"onStatusChange(scope.row)\"\r\n            >\r\n            </el-switch>\r\n          </template>\r\n        </el-table-column>\r\n      </el-table>\r\n      <!--\r\n       绑定页码\r\n       绑定每页大小\r\n       current-page 控制激活的页码，初始肯定是第 1 页\r\n       page-sizes 控制可选的每页大小\r\n      -->\r\n      <el-pagination\r\n        background\r\n        @size-change=\"handleSizeChange\"\r\n        @current-change=\"handleCurrentChange\"\r\n        :current-page.sync=\"page\"\r\n        :page-sizes=\"[10, 20, 50, 100]\"\r\n        :page-size.sync=\"pageSize\"\r\n        layout=\"total, sizes, prev, pager, next, jumper\"\r\n        :total=\"totalCount\">\r\n      </el-pagination>\r\n    </el-card>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n  import { getArticles, updateCommentStatus } from \"@/api/article\";\r\n\r\n  export default {\r\n  name: 'CommentIndex',\r\n  props: {},\r\n  components: {\r\n  },\r\n  data () {\r\n    return {\r\n      articles: [], // 文章数据列表\r\n      totalCount : 0,// 总数据条数\r\n      pageSize : 10,\r\n      page : 1  // 当前激活的页码默认是1\r\n    }\r\n  },\r\n  computed: {\r\n  },\r\n  created() {\r\n    this.loadArticles()\r\n  },\r\n  mounted() {},\r\n  watch: {\r\n  },\r\n  methods: {\r\n    handleSizeChange(val) {\r\n      this.loadArticles(1, val)\r\n    },\r\n    handleCurrentChange(page) {\r\n      // 页码给变 加载指定数据\r\n      this.loadArticles(page)\r\n    },\r\n    loadArticles(page = 1){\r\n      this.page = page\r\n      getArticles({\r\n        response_type : 'comment',\r\n        page,\r\n        per_page : this.pageSize\r\n      }).then(res => {\r\n        const results = res.data.data.results\r\n        results.forEach(item => {\r\n          item.statusDisabled = false\r\n        })\r\n        this.articles  = results\r\n        this.totalCount = res.data.data.total_count\r\n      })\r\n    },\r\n    onStatusChange (article) {\r\n      // 禁用开关\r\n      article.statusDisabled = true\r\n\r\n      // 请求提交修改\r\n      updateCommentStatus(article.id.toString(), article.comment_status).then(res => {\r\n        // 启用开关\r\n        article.statusDisabled = false\r\n        this.$message({\r\n          type: 'success',\r\n          message: article.comment_status ? '开启文章评论状态' : '关闭文章评论状态'\r\n        })\r\n      }).catch(err => {\r\n        article.statusDisabled = false\r\n        this.$message({\r\n          type: 'warning',\r\n          message: article.comment_status ? '开启文章评论状态失败' : '关闭文章评论状态失败'\r\n        })\r\n        article.comment_status = !article.comment_status\r\n      })\r\n    }\r\n  },\r\n  filters: {\r\n    fnName: function (value) {\r\n      return value\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped lang=\"less\">\r\n  .table-list{\r\n    margin-bottom: 30px;\r\n  }\r\n</style>\r\n"],"sourceRoot":"src/views/comment"}]}